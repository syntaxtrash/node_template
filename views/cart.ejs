<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cart</title>
    <link rel="stylesheet" href="/vendors/css/bootstrap.css">
    <script src="/vendors/js/jquery.js"></script>
    <script src="/customs/js/cart.js"></script>
</head>
<body>
    <%- include("partials/header") %>
    
    <h1 class="m-4">Cart</h1>
    
    <div class="container-fluid">
        <% if (products_on_cart.length > 0) { %>
            <table class="table">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>Price</th>
                        <th>Subtotal</th>
                        <th>Quantity</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="cart-container">
                    <% let total_price = 0;
                       products_on_cart.forEach(product => {
                       const sub_total = product.price * product.quantity;
                       total_price += sub_total; %>
                        <tr class="cart-product">
                            <td class="name"><%= product.name %></td>
                            <td>$<span class="price"><%= product.price %></span></td>
                            <td>$<span class="subtotal"><%= sub_total %></span></td>
                            <td>
                                <form action="/carts/update" method="POST" class="update-cart-form d-inline">
                                    <input type="hidden" name="product_id" value="<%= product.id %>">
                                    <div class="d-flex gap-2">
                                        <input type="number" name="quantity" value="<%= product.quantity %>" min="1" class="form-control" style="width: 80px;" readonly>
                                        <button type="button" class="btn btn-outline-dark decrease-qty-btn">-</button>
                                        <button type="button" class="btn btn-outline-dark increase-qty-btn">+</button>
                                    </div>
                                </form>
                            </td>
                            <td>
                                <form action="/carts/remove-product" method="POST" class="remove-to-cart-form">
                                    <input type="hidden" name="product_id" value="<%= product.id %>">
                                    <button type="submit" class="btn btn-outline-danger">Remove</button>
                                </form>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="5" class="text-end">
                            <strong>Total: $<span id="overall-total"><%= total_price %></span></strong>
                            <form action="/carts/checkout" method="POST" class="d-inline ms-3 checkout-form">
                                <input type="hidden" name="product_ids">
                                <button type="submit" class="btn btn-success">Checkout</button>
                            </form>
                        </td>
                    </tr>
                </tfoot>
            </table>
        <% } else { %>
            <p class="text-center">Your cart is empty.</p>
        <% } %>
    </div>
</body>
</html>
