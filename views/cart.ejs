<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cart</title>
    <link rel="stylesheet" href="/vendors/css/bootstrap.css">
    <link rel="stylesheet" href="/customs/css/index.css">
    <script src="/vendors/js/jquery.js"></script>
    <script src="/customs/js/cart.js"></script>
</head>
<body>
    <%- include("partials/header") %>
    
    <div class="container-fluid">
        <h1 class="text-secondary m-4">Cart</h1>
        
        <% if (products_on_cart.length > 0) { %>
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead class="table-secondary">
                        <tr>
                            <th class="w-25">Product</th>
                            <th class="w-25">Price</th>
                            <th class="w-25">Subtotal</th>
                            <th>Quantity</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="cart-container">
                        <% let total_price = 0;
                           products_on_cart.forEach(product => {
                           const sub_total = product.price * product.quantity;
                           total_price += sub_total; %>
                            <tr class="cart-product">
                                <td class="name"><%= product.name %></td>
                                <td>$<span class="price"><%= product.price %></span></td>
                                <td>$<span class="subtotal"><%= sub_total %></span></td>
                                <td>
                                    <form action="/carts/update" method="POST" class="update-cart-form d-inline">
                                        <input type="hidden" name="product_id" value="<%= product.id %>">
                                        <div class="input-group" style="width: 180px;">
                                            <input type="number" name="quantity" value="<%= product.quantity %>" min="1" class="form-control text-center" readonly>
                                            <button type="button" class="decrease-qty-btn btn btn-outline-secondary btn-lg">-</button>
                                            <button type="button" class="increase-qty-btn btn btn-outline-secondary btn-lg">+</button>
                                        </div>
                                    </form>
                                </td>
                                <td>
                                    <form action="/carts/remove-product" method="POST" class="remove-to-cart-form d-inline">
                                        <input type="hidden" name="product_id" value="<%= product.id %>">
                                        <button type="submit" class="btn btn-danger btn-lg">Remove</button>
                                    </form>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
            <div class="container-fluid">
                <div class="d-flex justify-content-end align-items-center gap-4 mt-3">
                    <div class="fs-4 fw-bold">
                        Total: $<span id="overall-total"><%= total_price %></span>
                    </div>
                    <form class="checkout-form" action="/carts/checkout" method="POST">
                        <input type="hidden" name="product_ids" value="">
                        <button type="submit" class="btn btn-success btn-lg">Checkout</button>
                    </form>
                </div>
            </div>
        <% } else { %>
            <p class="text-center">Your cart is empty.</p>
        <% } %>
    </div>
</body>
</html>
